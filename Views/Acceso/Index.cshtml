
@{
    Layout = "";
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <title>Inicio de Sesión</title>
    <!-- Favicon-->
    <link rel="icon" href="~/favicon.ico" type="image/x-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700&subset=latin,cyrillic-ext" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" type="text/css">

    <!-- Bootstrap Core Css -->
    <link href="~/Content/plugins/bootstrap/css/bootstrap.css" rel="stylesheet">

    <!-- Waves Effect Css -->
    <link href="~/Content/plugins/node-waves/waves.css" rel="stylesheet" />

    <!-- Animation Css -->
    <link href="~/Content/plugins/animate-css/animate.css" rel="stylesheet" />

    <!-- Custom Css -->
    <link href="~/Content/css/style.css" rel="stylesheet">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>
</head>

<body class="login-page">
    <div class="login-box">
        <div class="logo">
            <a href="javascript:void(0);">ARM</a>
            <small>Análisis y Registro de Mantenimientos</small>
        </div>
        <div class="card">
            <div class="body">
                <div class="msg">Ingrese sus credenciales para iniciar sesión</div>
                <div class="person col-xs-12">
                    <p> </p>
                </div>
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="material-icons">person</i>
                    </span>
                    <div class="form-line">
                        <input type="text" class="form-control" id="usuario" placeholder="Usuario" required autofocus>
                    </div>
                </div>
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="material-icons">lock</i>
                    </span>
                    <div class="form-line">
                        <input type="password" class="form-control" id="contrasena" placeholder="Contraseña" required>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        <button type="button" class="btn btn-block bg-cyan waves-effect" id="validar">Iniciar Sesión</button>
                    </div>
                </div>
                <div class="row m-t-15 m-b--20">
                    <div class="col-xs-6">
                    </div>
                    <div class="col-xs-6 align-right">
                        <u id="olvide" onclick="RecuperarPassword();">Olvidé mi contraseña</u>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Jquery Core Js -->
    <script src="~/Content/plugins/jquery/jquery.min.js"></script>

    <!-- Bootstrap Core Js -->
    <script src="~/Content/plugins/bootstrap/js/bootstrap.js"></script>

    <!-- Waves Effect Plugin Js -->
    <script src="~/Content/plugins/node-waves/waves.js"></script>

    <!-- Validation Plugin Js -->
    <script src="~/Content/plugins/jquery-validation/jquery.validate.js"></script>

    <!-- Custom Js -->
    <script src="~/Content/js/admin.js"></script>
    <script src="~/Content/js/pages/examples/sign-in.js"></script>

    <script src="~/JS/main.js"></script>

    <script src="~/JS/Acceso.js"></script>

    <div class="modal fade modal-center" id="myModalRecuperar" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content" style="width: 350px">
                <div class="modal-header" style="background-color:darkcyan">
                    <button type="button" class="close" data-dismiss="modal">×</button>
                    <h4 class="modal-title" style="color:white">Código de verificación</h4>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <div class="msg">
                                Digite el código de seguridad, el mismo fue enviado al correo configurado.
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-xs-3">
                                    <div class="form-line">
                                        <input type="text" style="text-transform:uppercase" class="form-control text-center" id="uno" maxlength="1" />
                                    </div>
                                </div>
                                <div class="col-xs-3">
                                    <div class="form-line">
                                        <input type="text" style="text-transform:uppercase" class="form-control text-center" id="dos" maxlength="1" />
                                    </div>
                                </div>
                                <div class="col-xs-3">
                                    <div class="form-line">
                                        <input type="text" style="text-transform:uppercase" class="form-control text-center" id="tres" maxlength="1" />
                                    </div>
                                </div>
                                <div class="col-xs-3">
                                    <div class="form-line">
                                        <input type="text" style="text-transform:uppercase" class="form-control text-center" id="cuatro" maxlength="1" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn bg-cyan waves-effect" id="btnValidarCodigo" onclick="VerificarCodigoRecuperacion();"><i class="material-icons">forward</i></button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade modal-center2" id="myModalCambiarPassword" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content" style="width: 370px">
                <div class="login-box">
                    <div class="logo">
                        <a href="javascript:void(0);">ARM</a>
                        <small>Cambio de contraseña</small>
                    </div>
                    <div class="card">
                        <div class="body">
                            <div class="input-group">
                                <label>Nueva contraseña</label>
                                <div class="form-line">
                                    <input type="password" class="form-control" id="nuevaContrasena" placeholder="Nueva contraseña">
                                </div>
                            </div>
                            <div class="input-group">
                                <label>Confirmar contraseña</label>
                                <div class="form-line">
                                    <input type="password" class="form-control" id="ConfirmarnuevaContrasena" placeholder="Confirmar contraseña">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-12">
                                    <button type="button" class="btn btn-block bg-cyan waves-effect" id="btnAceptarCambiarPassword" onclick="CambiarPassword();">Aceptar cambios</button>
                                    <button type="button" class="btn btn-block bg-red waves-effect" id="btnSalirCambiarPassword">Salir</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>

</html>