
@{
    ViewBag.Title = "Index";
}

<div class="container col-sm-12 col-md-12"style="padding:0%;margin:0%">
    <h2>Empleados</h2>
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">Agregar Empleado</button><br /><br />
    <div class="col-sm-12 col-md-12" style="padding:0%;margin:0%">
        <table class="table table-bordered table-hover table-responsive table-striped text-center" id="DatoEmpleado">
            <thead class="bg-info">
                <tr>
                    <th>
                        Cedula
                    </th>
                    <th>
                        Nombre
                    </th>
                    <th>
                        Primer Apellido
                    </th>
                    <th>
                        Segundo Apellido
                    </th>
                    <th>
                        Correo
                    </th>
                    <th>
                       Modificar/Eliminar
                    </th>
                </tr>
            </thead>
            <tbody class="tbody">
            </tbody>
        </table>

    </div>

</div>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">×</button>
                <h4 class="modal-title" id="myModalLabel">Empleado</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-xs-6">
                                <label for="Cedula">Cedula</label>
                                <input type="text" class="form-control" id="Cedula" placeholder="Cedula" />
                            </div>
                            <div class="col-xs-6">
                                <label for="Nombre">Nombre</label>
                                <input type="text" class="form-control" id="Nombre" placeholder="Nombre" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-xs-6">
                                <label for="Primer_Apellido">Primer Apellido</label>
                                <input type="text" class="form-control" id="Primer_Apellido" placeholder="Primer Apellido" />
                            </div>
                            <div class="col-xs-6">
                                <label for="Segundo_Apellido">Segundo Apellido</label>
                                <input type="text" class="form-control" id="Segundo_Apellido" placeholder="Segundo Apellido" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-xs-6">
                                <label for="Correo">Correo</label>
                                <input type="email" class="form-control" id="Correo" placeholder="Correo" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnAdd" onclick="return Add();">Agregar</button>
                <button type="button" class="btn btn-primary" id="btnUpdate" style="display:none;" onclick="Update();">Actualizar</button>
                <button type="button" class="btn btn-default" data-dismiss="modal" onclick="return clearTextBox();">Cerrar</button>
            </div>
        </div>
    </div>
</div>


@section Scripts
{
    @Scripts.Render("/JS/Empleados.js");
}
