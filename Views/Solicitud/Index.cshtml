        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">×</button>
                        <h4 class="modal-title" id="myModalLabel">Solicitud</h4>
                    </div>
                    <div class="modal-body">
                        <form>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-xs-6">
                                        <label for="IDSolicitud">IDSolicitud</label>
                                        <input type="text" class="form-control" id="IDSolicitud" placeholder="ID Solicitud" readonly="readonly" />
                                    </div>
                                    <div class="col-xs-6">
                                        <label for="Cliente">Cliente:</label>
                                        <select name="sltcliente" id="Cliente" class="form-control">
                                        </select>


                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-xs-6">
                                        <label for="Departamento">Departamento</label>
                                        <select name="sltDepartamento" id="Departamento" class="form-control">
                                        </select>
                                    </div>
                                    <div class="col-xs-6">
                                        <label for="Empleado">Empleado</label>
                                        <select name="sltEmpleado" id="Empleado" class="form-control">
                                        </select>

                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-xs-6">
                                        <label for="Equipo">Equipo</label>
                                        <select name="sltEquipo" id="Equipo" class="form-control">
                                        </select>
                                    </div>
                                    <div class="col-xs-6">
                                        <label for="TipoTrabajo">Tipo Trabajo</label>
                                        <select name="sltTipoTrabajo" id="TipoTrabajo" class="form-control">
                                        </select>

                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-xs-6">
                                        <label for="fechaReporte">Fecha</label>
                                        <input type="date" class="form-control" id="fechaReporte" placeholder="Fecha" />
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-xs-12">
                                        <label for="horaEntrada">Hora Entrada:</label>
                                        <input type="time" class="form-control" id="horaEntrada" placeholder="Hora Entrada" />
                                    </div>

                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-xs-12">
                                        <label for="horaSalida">Hora Salida:</label>
                                        <input type="time" class="form-control" id="horaSalida" placeholder="Hora Salida" />
                                    </div>

                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-xs-12">
                                        <label for="tipoHora">Tipo Hora:</label>
                                        <input type="text" class="form-control" id="tipoHora" placeholder="Tipo Hora" />
                                    </div>

                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-xs-12">
                                        <label for="cantidadHoras">Cantidad de Horas:</label>
                                        <input type="number" class="form-control" id="cantidadHoras" placeholder="Cantidad Horas" />
                                    </div>

                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-xs-12">
                                        <label for="motivoVisita">Motivo de Visita:</label>
                                        <input type="text" class="form-control" id="motivoVisita" placeholder="Motivo de Visita" />
                                    </div>

                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-xs-12">
                                        <label for="motivoDetalle">Motivo de Detalle:</label>
                                        <textarea id="motivoDetalle" class="form-control" rows="4" style="resize:none;width:100%;max-width:none"></textarea>
                                    </div>

                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-xs-12">
                                        <label for="solicitudRepuestos">Solicitud Repuestos:</label>
                                        <textarea id="solicitudRepuestos" class="form-control" rows="4" style="resize:none;width:100%;max-width:none"></textarea>
                                    </div>

                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-xs-12">
                                        <label for="equipoDetenido">Equipo Detenido:</label>
                                        <input type="text" class="form-control" id="equipoDetenido" placeholder="Equipo Detenido" />
                                    </div>

                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-primary" id="btnAdd" onclick="return Add();">Agregar</button>
                                <button type="button" class="btn btn-primary" id="btnUpdate" style="display:none;" onclick="Update();">Actualizar</button>
                                <button type="button" class="btn btn-default" data-dismiss="modal" onclick="return clearTextBox();">Cerrar</button>
                            </div>
</div>
            </div>
        </div>
    </section>

