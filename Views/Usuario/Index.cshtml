@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>

<section class="content">
    <div class="container-fluid">
        <div class="block-header">
            <h1>Lista de Usuarios</h1>
        </div>
        <div class="col-xs-12">
            <button type="button" class="btn bg-orange waves-effect" data-toggle="modal" data-target="#myModal" onclick="cargarAgregar();">Agregar Usuario</button><br /><br />
        </div>
        <!-- Basic Examples -->
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="body">
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover js-basic-example dataTable" id="DatoUsuario">
                                <thead>
                                    <tr>
                                        <th>Cédula</th>
                                        <th>Contraseña</th>
                                        <th>Rol</th>
                                        <th>Modificar</th>
                                        <th>Habilitado/Deshabilitado</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- #END# Basic Examples -->
    </div>

    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">×</button>
                    <h4 class="modal-title" id="myModalLabel">Datos del Usuario</h4>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-xs-6">
                                    <label for="Usuario">Usuario:</label>
                                    <select class="form-control" name="empleados" id="empleados">
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-xs-6">
                                    <label for="Contraseña">Contraseña:</label>
                                    <div class="form-line">
                                        <input type="text" class="form-control" id="Contraseña" placeholder="Contraseña" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-xs-6">
                                    <label for="rol">Rol:</label>
                                    <select name="sltrol" id="Rol" class="form-control">
                                    </select>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn bg-orange waves-effect" id="btnAdd" onclick="return AgregarUsuario();"><i class="material-icons">save</i></button>
                    <button type="button" class="btn bg-orange waves-effect" id="btnUpdate" style="display:none;" onclick="ModificarUsuario();"><i class="material-icons">save</i></button>
                    <button type="button" class="btn btn-default" data-dismiss="modal" onclick="return clearTextBox();"><i class="material-icons">close</i></button>
                </div>
            </div>
        </div>
    </div>
</section>

    @section Scripts
{
        @Scripts.Render("/JS/ListaUsuarios.js");
    }
